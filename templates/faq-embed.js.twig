(function() {
    const widgetId = 'faq-widget-{{ widget.id }}';
    const questions = {{ widget.questions|json_encode|raw }};

    // Create container
    const container = document.createElement('div');
    container.id = widgetId;
    container.style.fontFamily = '{{ widget.font|default("sans-serif") }}';
    container.style.maxWidth = '800px';
    container.style.margin = '0 auto';
    container.style.padding = '20px';
    container.style.backgroundColor = '{{ widget.backgroundColor|default("transparent") }}';

    // Create styles
    const style = document.createElement('style');
    style.textContent = `
        #${widgetId} .bnnr_faq_item {
            border-bottom: 1px solid #e5e7eb;
            padding-bottom: 8px;
            margin-bottom: 8px;
        }
        #${widgetId} .bnnr_faq_item:last-child {
            border-bottom: none;
            padding-bottom: 0;
            margin-bottom: 0;
        }
        #${widgetId} details > summary {
            list-style: none;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            font-weight: 500;
            color: {{ widget.questionColor|default('#111827') }};
            transition: color 0.2s;
        }
        #${widgetId} details > summary::-webkit-details-marker {
            display: none;
        }
        #${widgetId} details > summary:hover {
            color: {{ widget.hoverColor|default('#4f46e5') }};
        }
        #${widgetId} .bnnr_faq_answer {
            color: {{ widget.answerColor|default('#6b7280') }};
            line-height: 1.6;
            margin-top: 8px;
            font-size: 14px;
        }
        #${widgetId} .bnnr_faq_icon {
            width: 24px;
            height: 24px;
            transition: transform 0.2s;
            flex-shrink: 0;
            margin-left: 16px;
        }
        #${widgetId} details[open] .bnnr_faq_icon {
            transform: rotate(180deg);
        }
    `;
    document.head.appendChild(style);

    // Create Title (H2)
    {% if widget.name %}
    const title = document.createElement('h2');
    title.textContent = '{{ widget.name|e("js") }}';
    title.style.fontSize = '1.5rem';
    title.style.fontWeight = 'bold';
    title.style.marginBottom = '24px';
    title.style.color = '{{ widget.questionColor|default("#111827") }}';
    container.appendChild(title);
    {% endif %}

    // Render questions
    questions.forEach((q) => {
        const item = document.createElement('div');
        item.className = 'bnnr_faq_item';

        const details = document.createElement('details');
        
        const summary = document.createElement('summary');
        summary.innerHTML = `
            <h3 style="margin:0; font-size:inherit; font-weight:inherit;">${q.question}</h3>
            <svg class="bnnr_faq_icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 9l6 6 6-6" />
            </svg>
        `;

        const answer = document.createElement('p');
        answer.className = 'bnnr_faq_answer';
        answer.innerHTML = q.answer;

        details.appendChild(summary);
        details.appendChild(answer);
        item.appendChild(details);
        container.appendChild(item);
    });

    // JSON-LD Structured Data
    const jsonLd = {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": questions.map(q => ({
            "@type": "Question",
            "name": q.question,
            "acceptedAnswer": {
                "@type": "Answer",
                "text": q.answer
            }
        }))
    };

    const script = document.createElement('script');
    script.type = 'application/ld+json';
    script.text = JSON.stringify(jsonLd);
    document.head.appendChild(script);

    // Find script tag to insert after
    const scripts = document.getElementsByTagName('script');
    const currentScript = scripts[scripts.length - 1];
    currentScript.parentNode.insertBefore(container, currentScript.nextSibling);
})();
