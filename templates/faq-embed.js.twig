(function() {
    const widgetId = 'faq-widget-{{ widget.id }}';
    const questions = {{ widget.questions|json_encode|raw }};

    // Styling settings
    const questionTag = '{{ widget.questionTag|default("h3") }}';
    const questionColor = '{{ widget.questionColor|default("#111827") }}';
    const questionFont = '{{ widget.questionFont|default(widget.font|default("sans-serif")) }}';
    const questionSize = '{{ widget.questionSize|default("18px") }}';
    const questionBold = {{ widget.questionBold is not defined or widget.questionBold ? 'true' : 'false' }};
    const questionItalic = {{ widget.questionItalic|default(false) ? 'true' : 'false' }};
    const questionAlign = '{{ widget.questionAlign|default("left") }}';
    const questionMarginBottom = {{ widget.questionMarginBottom|default(8) }};

    const answerTag = '{{ widget.answerTag|default("p") }}';
    const answerColor = '{{ widget.answerColor|default("#6B7280") }}';
    const answerFont = '{{ widget.answerFont|default(widget.font|default("sans-serif")) }}';
    const answerSize = '{{ widget.answerSize|default("14px") }}';
    const answerBold = {{ widget.answerBold|default(false) ? 'true' : 'false' }};
    const answerItalic = {{ widget.answerItalic|default(false) ? 'true' : 'false' }};
    const answerAlign = '{{ widget.answerAlign|default("left") }}';
    const answerMarginBottom = {{ widget.answerMarginBottom|default(8) }};

    const hoverColor = '{{ widget.hoverColor|default("#4f46e5") }}';

    // Arrow settings
    const arrowPosition = '{{ widget.arrowPosition|default("after") }}';
    const arrowColor = '{{ widget.arrowColor|default("#6B7280") }}';
    const arrowSize = {{ widget.arrowSize|default(24) }};

    // Border settings
    const borderEnabled = {{ widget.borderEnabled|default(false) ? 'true' : 'false' }};
    const borderColor = '{{ widget.borderColor|default("#e5e7eb") }}';
    const borderWidth = {{ widget.borderWidth|default(1) }};
    const borderRadius = {{ widget.borderRadius|default(0) }};

    // Divider settings
    const dividerEnabled = {{ widget.dividerEnabled is not defined or widget.dividerEnabled ? 'true' : 'false' }};
    const dividerColor = '{{ widget.dividerColor|default("#e5e7eb") }}';
    const dividerWidth = {{ widget.dividerWidth|default(100) }};
    const dividerHeight = {{ widget.dividerHeight|default(1) }};
    const dividerStyle = '{{ widget.dividerStyle|default("solid") }}';
    const dividerMargin = {{ widget.dividerMargin is not null ? widget.dividerMargin : 8 }};

    // Create container
    const container = document.createElement('div');
    container.id = widgetId;
    container.style.fontFamily = '{{ widget.font|default("sans-serif") }}';
    container.style.maxWidth = '800px';
    container.style.margin = '0 auto';
    container.style.padding = '20px';
    container.style.backgroundColor = '{{ widget.backgroundColor|default("transparent") }}';
    
    if (borderEnabled) {
        container.style.border = `${borderWidth}px solid ${borderColor}`;
        container.style.borderRadius = `${borderRadius}px`;
    }

    // Create styles
    const style = document.createElement('style');
    style.textContent = `
        #${widgetId} .bnnr_faq_item {
            width: 100%;
            margin: 0 auto;
            padding-bottom: ${dividerMargin}px;
            margin-bottom: 0px;
            padding-top: ${dividerMargin}px;
        }
        #${widgetId} .bnnr_faq_item:first-child {
            padding-top: 0;
        }
        #${widgetId} .bnnr_faq_item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
        }
        #${widgetId} .bnnr_faq_divider {
            border: none;
            height: ${dividerHeight}px;
            background-color: ${dividerColor};
            width: ${dividerWidth}%;
            margin: 0 auto;
            /* Support for dashed/dotted styles if needed */
            border-top: ${dividerStyle !== 'solid' ? dividerHeight + 'px ' + dividerStyle + ' ' + dividerColor : 'none'};
            background-color: ${dividerStyle !== 'solid' ? 'transparent' : dividerColor};
        }
        #${widgetId} details > summary {
            list-style: none;
            cursor: pointer;
            display: flex;
            justify-content: ${arrowPosition === 'right' ? 'space-between' : 'flex-start'};
            align-items: center;
            padding: 8px 0;
            transition: color 0.2s;
        }
        #${widgetId} details > summary::-webkit-details-marker {
            display: none;
        }
        #${widgetId} details > summary:hover .bnnr_faq_question {
            color: ${hoverColor} !important;
        }
        #${widgetId} .bnnr_faq_question {
            color: ${questionColor};
            font-family: ${questionFont};
            font-size: ${questionSize};
            font-weight: ${questionBold ? 'bold' : 'normal'};
            font-style: ${questionItalic ? 'italic' : 'normal'};
            text-align: ${questionAlign};
            margin: 0;
            flex: 1;
            transition: color 0.2s;
        }
        #${widgetId} .bnnr_faq_answer {
            color: ${answerColor};
            font-family: ${answerFont};
            font-size: ${answerSize};
            font-weight: ${answerBold ? 'bold' : 'normal'};
            font-style: ${answerItalic ? 'italic' : 'normal'};
            text-align: ${answerAlign};
            line-height: 1.6;
            margin-top: 8px;
            margin-bottom: ${answerMarginBottom}px;
        }
        #${widgetId} .bnnr_faq_icon {
            width: ${arrowSize}px;
            height: ${arrowSize}px;
            color: ${arrowColor};
            transition: transform 0.2s;
            flex-shrink: 0;
            margin-left: ${arrowPosition === 'left' ? 0 : '16px'};
            margin-right: ${arrowPosition === 'left' ? '16px' : 0};
            order: ${arrowPosition === 'left' ? -1 : 1};
        }
        #${widgetId} details[open] .bnnr_faq_icon {
            transform: rotate(180deg);
        }
    `;
    document.head.appendChild(style);

    // Create Title (H2)
    {% if widget.name %}
    const title = document.createElement('h2');
    title.textContent = '{{ widget.name|e("js") }}';
    title.style.fontSize = '1.5rem';
    title.style.fontWeight = 'bold';
    title.style.marginBottom = '24px';
    title.style.color = '{{ widget.questionColor|default("#111827") }}';
    container.appendChild(title);
    {% endif %}

    // Render questions
    questions.forEach((q, index) => {
        const item = document.createElement('div');
        item.className = 'bnnr_faq_item';

        const details = document.createElement('details');
        
        const summary = document.createElement('summary');
        summary.innerHTML = `
            <${questionTag} class="bnnr_faq_question">${q.question}</${questionTag}>
            <svg class="bnnr_faq_icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 9l6 6 6-6" />
            </svg>
        `;

        const answer = document.createElement(answerTag);
        answer.className = 'bnnr_faq_answer';
        answer.innerHTML = q.answer;

        details.appendChild(summary);
        details.appendChild(answer);
        item.appendChild(details);
        
        container.appendChild(item);

        // Add divider if enabled and not last item
        if (dividerEnabled && index < questions.length - 1) {
             const divider = document.createElement('hr');
             divider.className = 'bnnr_faq_divider';
             container.appendChild(divider);
        }
    });

    // JSON-LD Structured Data
    const jsonLd = {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": questions.map(q => ({
            "@type": "Question",
            "name": q.question,
            "acceptedAnswer": {
                "@type": "Answer",
                "text": q.answer
            }
        }))
    };

    const script = document.createElement('script');
    script.type = 'application/ld+json';
    script.text = JSON.stringify(jsonLd);
    document.head.appendChild(script);

    // Find script tag to insert after
    const scripts = document.getElementsByTagName('script');
    const currentScript = scripts[scripts.length - 1];
    currentScript.parentNode.insertBefore(container, currentScript.nextSibling);
})();

